<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ButtonActivity"
    android:background="#000000">


    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
                </com.google.android.gms.common.SignInButton>

    <TextView android:text="Lights Out!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffe3e8de"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="58sp"
        android:id="@+id/textView"
        android:layout_below="@+id/sign_in"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/boxglove_custom"
        android:text="SINGLE\nPLAYER"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/sinButton"
        android:layout_below="@+id/textView" />


      <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/boxglove_custom"
        android:text="MULTI\nPLAYER"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/multiButton"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/boxglove_mirror_custom"
        android:text="STATS"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/leaderButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"  />

    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/boxglove_mirror_custom"
        android:text="FIT"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/fitButton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"/>

</RelativeLayout>
